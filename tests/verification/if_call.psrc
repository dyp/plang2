/*

<test>
    = forall nat a. a >= 1 => m_bar(a - 1) < m_bar(a) & P_bar(a - 1) & a >= 1
    = forall nat a, K b. Q_bar(b) & a >= 1 => Q_bar(b)
    = forall nat a, nat b, nat c. c = a - 1 & a >= 1 & b = a - 1 => b = c
</test>

*/

bar(nat a: nat b)
pre a > 0
{
    if (a = 0)
        b = 0;
    if (bar(a-1) = 0)
        b = 0;
}
post b = 0
measure a;
